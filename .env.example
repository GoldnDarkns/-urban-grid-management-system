# MongoDB
MONGO_URI=mongodb://localhost:27017
MONGO_DB=urban_grid_ai

# Simulated mode: set these so backend connects to MongoDB Atlas for demo data (required for Simulated mode)
# SIM_MONGO_URI=mongodb+srv://user:pass@cluster.mongodb.net/?retryWrites=true&w=majority
# SIM_MONGO_DB=urban_grid_ai
# City mode (optional): for local backend without Docker use CITY_MONGO_URI=mongodb://localhost:27017
# With Docker, City DB defaults to mongodb://mongodb:27017
# CITY_MONGO_URI=mongodb://mongodb:27017
# CITY_MONGO_DB=urban_grid_city

# Docker: use mongodb://mongodb:27017 when running via docker-compose
# MONGO_URI=mongodb://mongodb:27017

# Kafka (Phase 2) – used by kafka-producer service
# KAFKA_BOOTSTRAP_SERVERS=kafka:9092
# KAFKA_PRODUCER_CITY_ID=nyc
# KAFKA_PRODUCER_INTERVAL_SECONDS=45

# AQI fallback when AirVisual API fails (429/errors) – CSV path
# Place your file at data/Kaggle_Aqi_Downloaded.csv (or set this)
# KAGGLE_AQI_CSV_PATH=data/Kaggle_Aqi_Downloaded.csv

# OpenRouter (AI Recommendations – primary)
# Get a key at https://openrouter.ai — 402 = insufficient credits (add credits at https://openrouter.ai/settings/credits)
# OPENROUTER_API_KEY=sk-or-v1-your-key-here
# OPENROUTER_MAX_TOKENS=512

# Mistral (fallback when OpenRouter fails; same OpenAI-compatible chat API)
# Get a key at https://console.mistral.ai
# MISTRAL_API_KEY=your-mistral-key
# MISTRAL_API_URL=https://api.mistral.ai/v1/chat/completions
# MISTRAL_MODEL=mistral-small-latest

# Neo4j (Knowledge Graph – Advanced Analytics → Knowledge Graph tab)
# Docker Compose injects NEO4J_URI=bolt://neo4j:7687 for backend. For backend on host use:
# NEO4J_URI=bolt://localhost:7687
# NEO4J_USER=neo4j
# NEO4J_PASSWORD=urban-grid-kg

# Phase 4: Voice (Scenario Console – Deepgram STT/TTS)
# Get a key at https://console.deepgram.com — enables Text + Voice mode and “Speak reply”
# DEEPGRAM_API_KEY=your-deepgram-api-key
